<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainTextFont">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>
    <style name="popUpSpinner">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>
    <style name="switchStyle">
        <item name="android:trackTint">@color/amarilloBokitaDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>
    <style name="checkboxStyle">
        <item name="android:buttonTint">@color/amarilloBokita</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>
    <!-- Ver como implementamos esto, lo dejo por las dudas aca -Martin -->
    <style name="buttonDisabled">
        <item name="android:background">@color/disabledButtonBackground</item>
        <item name="android:textColor">@color/disabledButtonText</item>
    </style>
    <style name="buttonEnabled">
        <item name="android:background">@color/enabledButtonBackground</item>
        <item name="android:textColor">@color/enabledButtonText</item>
    </style>
</resources>